<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="global.sesoc.teamBOB4.dao.TagMapper">

<select id="selectTagLink" parameterType="String" resultType="int">
  (select NVL(max(tag_number),0)  from Tag
	where tag_name =#{tag_name} ) 

</select>
	
<insert id="creatTagLink" parameterType="String" >
	insert into Tag
		(
		tag_number
		,tag_name
		)
		values
		(
		SEQ_Tag_tag_number.nextval
		,#{tag_name}
		)
	
</insert>

	
</mapper>